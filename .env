# Environment settings file (.env)
#
# Store configuration values separately from code for easy management.
# Load this file in Python using the dotenv package.

#####################################
# Kafka & Zookeeper Configuration
#####################################

ZOOKEEPER_ADDRESS=localhost:2181  # Default for local Kafka installations
KAFKA_BROKER_ADDRESS=localhost:9092  # Kafka broker address

#####################################
# JSON App (Buzzline) Settings
#####################################

BUZZ_TOPIC=buzzline_json
BUZZ_INTERVAL_SECONDS=1
BUZZ_CONSUMER_GROUP_ID=buzz_group

#####################################
# CSV App (Smoker) Settings
#####################################

SMOKER_TOPIC=smoker_csv
SMOKER_INTERVAL_SECONDS=5
SMOKER_CONSUMER_GROUP_ID=smoker_group
SMOKER_STALL_THRESHOLD_F=0.2  # Temperature stall threshold (in Fahrenheit)
SMOKER_ROLLING_WINDOW_SIZE=10  # Window size for stall detection

#####################################
# Rafting App (French Broad River) Settings
#####################################

RAFTING_TOPIC=rafting_feedback  # Topic for rafting trip feedback
RAFTING_INTERVAL_SECONDS=2  # Interval for feedback messages
RAFTING_CONSUMER_GROUP_ID=rafting_group
RAFTING_CSV_TOPIC=processed_csv_feedback  # Processed rafting data

#####################################
# Environmental Data Files
#####################################

WEATHER_DATA_FILE=data/weather_data.json  # Weather conditions file
RIVER_FLOW_DATA_FILE=data/river_flow.json  # River flow data file

#####################################
# Logging Configuration
#####################################

LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/app.log  # Log output file
